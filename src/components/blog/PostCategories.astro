---
import type { Post } from '@/types';
interface Props {
   name: string;
   slug: string;
}

const {name, slug} = Astro.props;

---

    <a
      href={`/blog/categories/${slug}`}
      class="inline-block px-5 py-2 text-xs font-medium text-amber-200 bg-amber-900 rounded-md hover:bg-amber-800 transition-colors"
    >
      {name}
    </a>