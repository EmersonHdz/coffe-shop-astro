---

import { MenuItemsSchema } from  '../../types';
import MenuItem from './MenuItem.astro';

const url = `${import.meta.env.API_URL}/product?product-category=6`
const res = await fetch(url);
const json = await res.json();
const data = MenuItemsSchema.parse(json);




---

<div >
      <h4 class="text-white font-black text-4xl  uppercase text-center my-10">Coffe Drinks</h4>

      <ul id="coffe-menu" class="space-y-3">
            {data.map(item => (
                <MenuItem
                  title={item.title.rendered}
                   description={item.acf.description}
                   price={item.acf.price}
                   image={item.featured_image}
                />   
            ))}

      </ul>
</div>

<script>
      import PhotoSwipeLightbox from 'photoswipe/lightbox';
      import 'photoswipe/style.css';

      const lightbox = new PhotoSwipeLightbox({
        gallery: '#coffe-menu',
        children: 'a',
        pswpModule: () => import('photoswipe'),
      });
      lightbox.init();
</script>